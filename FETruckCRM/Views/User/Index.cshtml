<div class="page-content-bg">
    <!-- DATA TABLE-->
    <section class="">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                   
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2" id="tblUser">
                            <thead>
                                <tr>
                                    <th>Site</th>
