
@{
    ViewBag.Title = "Customer Master Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var success = TempData["Success"];
    var Err = TempData["Error"];
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="p_title">Customer Master Report</div>
            <div class="buttons-wrap">
                <div class="left__buttons">
                    <a href="@Url.Action("ExportToExcelCustomerMaster", "Customer")">

                        <img src="~/assets/images/xlsx.ico" width="40px" title="Export To Excel" />
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="page-content-bg">
    <!-- DATA TABLE-->
    <section class="">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2" id="tblCustomer">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Address</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Zip</th>
                                    <th>Telephone</th>
                                    <th>Status</th>
                                    <th>Approval Status</th>
                                    <th>Approval Date</th>
                                    <th>Approval By</th>
                                    <th>Date Added</th>
                                    <th>Added By User</th>
                                    <th>Team Lead</th>
                                    <th>Team Manager</th>
                                    <th>@*Actions*@</th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END DATA TABLE-->


</div>
