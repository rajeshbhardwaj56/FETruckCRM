@model FETruckCRM.Models.CheckEmailModel
@{
    Layout = null;
    var error = ViewBag.Error;
    var success = ViewBag.Success;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <title>Truck CRM- Login</title>
    <link href="@Url.Content("~/assets/css/font-awesome.min.css")" rel="stylesheet" media="all">
    <link href="@Url.Content("~/assets/css/bootstrap.min.css")" rel="stylesheet" media="all">
    <link href="@Url.Content("~/assets/css/theme.css")" rel="stylesheet" media="all">
    <link href="@Url.Content("~/assets/css/custom.css")" rel="stylesheet" media="all">
    <link href="@Url.Content("~/assets/css/jquery.notifyBar.css")" rel="stylesheet" />
    <style>
        .inner_part {
            width: 100%
        }

        .left_banner_part {
            float: left;
            width: 45%;
        }

        .right_banner_part {
            float: right;
            width: 45%;
        }

        .clr {
            clear: both;
        }

        .form_container {
            width: 100%;
            margin-top: 30%;
        }

        .login_form {
            width: 100%;
        }

            .login_form span {
                width: 100%;
                padding: 26px;
            }

                .login_form span .input {
                    line-height: 2.15;
                    margin-top: 10px;
                    width: 300px;
                    border: 0;
                    border-bottom: 1px solid gray;
                }

        button.submit {
            padding: 5px;
            margin-left: 26px;
            margin-top: 25px;
            background-color: #FFCC33;
            border: 0;
            border-radius: 2px;
            width: 100px;
            height: 35px;
        }

        .field-validation-error {
            color: red;
        }
    </style>
</head>

<body class="login_bg">
    <div class="page-content">
        <div class="container login_container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="@Url.Content("~/assets/images/logo-black.png")" alt="Logo">
                        </a>
                    </div>
                    @using (Html.BeginForm("CheckEmail", "Account", FormMethod.Post, new { @id = "CheckEmailForm", @onsubmit = "showLoader(this);", autocomplete = "off" }))
                    {



                        <div class="login-form">
                            <form action="" method="post">
                                <div class="form-group">
                                    <label>Email Address</label>
                                    @*<input class="el-input el-input--full" type="email" name="email" placeholder="Email">*@
                                    @Html.TextBoxFor(a => a.EmailId, "", new { @class = "el-input el-input--full", @placeholder = "Username" })
                                    @Html.ValidationMessageFor(m => m.EmailId)
                                </div>
                                
                                @*<div class="login-checkbox">
                                        <label>
                                            <input type="checkbox" name="remember">Remember Me
                                        </label>
                                        <label>
                                            <a href="@Url.Action("ForgotPassword", "Account")">Change Password</a>
                                        </label>
                                    </div>*@
                                <button class="submit" type="submit">Submit</button>
                                <a href="@Url.Action("Login", "Account")">Back To Login</a>
                            </form>
                        </div>





                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    @*<script src="vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <script src="js/main.js"></script>*@
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/assets/js/jquery.notifyBar.js"></script>
    <script>
        var showLoader = function (form) {
            $("#divLoader").show();
            setTimeout(function () {
                $("#divLoader").hide();
            }, 1000);
        }


    var err = '@ViewBag.Error';
    var success = '@ViewBag.Success';
    if (err != null && err != '') {
        $('#divSuccess').hide();
        $('#divFgForm').show();

        ShowError(err);
        }
        if (success != null && success != '') {

            $('#divSuccess').show();
            $('#divFgForm').hide();

            ShowSucess(success);
        }


        function ShowSucess(msg) {
            $.notifyBar({ cssClass: "success", html: msg });
        }
        function ShowError(msg) {
            $.notifyBar({ cssClass: "error", html: msg });
        }

    </script>
</body>

</html>